/* pages/historyrecord/historyrecord.wxss */
.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.btn {
  position: fixed;
  width: 100%;
  bottom: 1%;
}

.box {
  padding-left: 1%;
  width: 100%;
}

.title {
  width: 100%;
  height: 12%;
  display: flex;
  align-items: center;
  font-size: xx-large;
}

.choose {
  position: relative;
  right: -10%;

}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.check {
  width: 100%;
  border: black 1px solid;
}

.list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 180rpx;
  font-size: large;
  border: black 1px solid;
}

.separate {
  width: 100%;
  height: 10%;
}