/* pages/charts/charts.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

ec-canvas {
  width: 100%;
  height: 80%;
}

.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.title {
  font-size: xx-large;
  color: green;
  width: auto;
  height: 10%;
}

.change {
  width: 100%;
  height: 10%;
  display: flex;
}

.item {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;

}

.borderleft {
  border-left: 1rpx gray solid;
}

.item text {
  text-align: center;
  color: blue;
}

.warn {
  margin: 100rpx;
  position: absolute;
  top: 200rpx;
  color: red;
  font-size: xx-large;
}