/* pages/mydatanow/mydatanow.wxss */
.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.conclusion {
  width: 100%;
  height: 30%;
  padding: 2%;
  font-size: large;
}

.btnrefresh {
  position: absolute;
  top: 20%;
  right: 2%;
}

.btnback {
  position: absolute;
  top: 20%;
  left: 2%;
}

.bigbox {
  width: 100%;
  height: 70%;
}

.box {
  width: 100%;
  height: 30%;
  border: black 1px solid;
}

.title {
  width: 100%;
  height: 40%;
  display: flex;
  align-items: center;
  font-size: large;
  padding-left: 5%;
}

.content {
  width: 100%;
  height: 60%;
  display: flex;
  align-items: center;
  font-size: xx-large;
  padding-left: 5%;
}

.more {
  font-size: large;
  position: absolute;
  right: 5%;
  color: green;
}

.type {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: large;
  padding: 3%;
  color: blue;
}